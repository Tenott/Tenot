generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  BUYER
  SUPPLIER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime @default(now())

  supplierProfile SupplierProfile?

  messages Message[]

  buyerChats    Chat[] @relation("BuyerChats")
  supplierChats Chat[] @relation("SupplierChats")

  favorites Favorite[] @relation("BuyerFavorites")
}

model SupplierProfile {
  id          Int     @id @default(autoincrement())
  userId      Int     @unique
  name        String
  phone       String
  description String?

  user     User     @relation(fields: [userId], references: [id])
  listings Listing[]
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  listings Listing[]
}

model Listing {
  id          Int      @id @default(autoincrement())
  title       String
  article     String
  description String
  price       Float
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  supplierId Int
  categoryId Int

  supplier SupplierProfile @relation(fields: [supplierId], references: [id])
  category Category        @relation(fields: [categoryId], references: [id])

  images ListingImage[]
  chats  Chat[]
  favorites Favorite[]
}

model ListingImage {
  id        Int    @id @default(autoincrement())
  url       String
  listingId Int

  listing Listing @relation(fields: [listingId], references: [id])
}

model Chat {
  id         Int @id @default(autoincrement())

  buyerId    Int
  supplierId Int
  listingId  Int

  buyer    User    @relation("BuyerChats", fields: [buyerId], references: [id])
  supplier User    @relation("SupplierChats", fields: [supplierId], references: [id])
  listing  Listing @relation(fields: [listingId], references: [id])

  messages Message[]
}

model Message {
  id        Int      @id @default(autoincrement())
  chatId    Int
  senderId  Int
  text      String
  createdAt DateTime @default(now())

  chat   Chat @relation(fields: [chatId], references: [id])
  sender User @relation(fields: [senderId], references: [id])
}

model Favorite {
  id        Int @id @default(autoincrement())
  buyerId   Int
  listingId Int

  buyer   User    @relation("BuyerFavorites", fields: [buyerId], references: [id])
  listing Listing @relation(fields: [listingId], references: [id])

  @@unique([buyerId, listingId])
}
